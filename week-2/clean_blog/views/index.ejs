<%-include('partials/header')-%>
<body>
<!-- Navigations -->
  <%-include('partials/navigation')-%>

  <!-- Page Header -->
  <header class="masthead" style="background-image: url('img/home-bg.jpg')">
    <div class="overlay"></div>
    <div class="container">
      
      <div class="row">
        <div class="col-lg-8 col-md-10 mx-auto">
          <div class="site-heading">
            <h1>Clean Blog</h1>
           
          </div>
        </div>
      </div>
    </div>
  </header>

  <!-- Main Content -->
  <div class="container">
     <a class="btn btn-primary float-right" href="/add">Add Post</a>
    <div class="row">
        <div class="col-lg-8 col-md-10 mx-auto">
      
    
        <% posts.forEach((post)=>{  %>
          <div class="post-preview">
            <a href="/posts/<%=post._id %>">
              <h2 class="post-title">
                <%= post.title %>
              </h2>
              <h3 class="post-subtitle">
                <%= post.detail %>
              </h3>
            </a>
            <p class="post-meta">Posted on <%= post.dateCreated %></p>
          </div>
          <hr>
          <% })%>
  
        <!-- Pager -->
        <div class="clearfix">
          <a class="btn btn-primary float-right" href="#">Older Posts &rarr;</a>
        </div>
      </div>
    </div>
  </div>
  <hr>
  <!-- Footer -->
  <%-include ('partials/footer')-%>

</body>